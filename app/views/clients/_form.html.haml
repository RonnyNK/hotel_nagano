= form_for(@client) do |f|
  - if @client.errors.any?
    #errorExplanation
      %h2
        = pluralize(@client.errors.count, "error")
        prohibited
        this post from being saved:
      %ul
        - @client.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .actions
    = f.submit